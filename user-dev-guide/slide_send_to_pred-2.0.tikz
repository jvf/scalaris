 \node[end]   (pred-end)  [below=\tikzstartsecond of pred-got-owner] {\footnotesize pred};

 \node[start] (succ)      [below right=0.5 and 2.5 of heading1.south] {succ};
 \node[inner] (succ-init)           [below=\tikzstartsecond of succ]      {};
